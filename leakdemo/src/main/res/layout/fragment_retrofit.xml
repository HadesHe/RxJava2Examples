<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:gravity="center"
        android:text="Retrofit Demo"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnDemoRetrofit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="14sp"
            android:text="Log Contributors Of"
            />
        <EditText
            android:id="@+id/etDemoUsername"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Square"
            android:hint="owner"
            />
        <EditText
            android:id="@+id/etDemoRepository"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="retrofit"
            android:hint="reponame"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnDemoUserInfo"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="14dp"
            android:text="full user info"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etDemoUserInfoUsername"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Square"
            android:hint="Owner"
            />
        <EditText
            android:id="@+id/etDemoUserInfoUserRepository"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="retrofit"
            android:hint="reponame"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/lstThreadingLog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>